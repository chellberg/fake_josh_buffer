<div class="col-md-12">	
  <div class="panel panel-info">
	<% @posts.each do |post| %>
	  <div class="panel-heading">
	    <h3 class="panel-title">
		  <%= link_to("Post #{post.id}", post) %>
		  <%= link_to("Destroy", post, :method => :delete) %>
		</h3>
		</div>
		<div class="panel-body">
		  <%= post.text %>
		  <%= post.url if post.url %>
		</div>
    <% end %>
  </div>
</div>


